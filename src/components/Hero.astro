---
// src/components/Hero.astro
import { Image } from 'astro:assets';
import heroImage from '../assets/helo.webp'; 
---
<section id="hero" class="hero">
    <h2>Boas-vindas a este elegante<br>elo na arte inspirada!</h2>
    <p>Conectando arte, terapia e tecnologia<br>para realizar, inspirar, incluir...</p>
    
    <Image 
        src={heroImage} 
        alt="Ilustração abstrata e cósmica representando a essência da ELOnARTE" 
        class="hero-image"
        width={500}
        height={500}
        quality={'mid'}
    />

    <a href="#artes-digitais" class="btn">Conheça Nossos Serviços</a>
</section>

<style>
.hero {
    padding: 4rem 1.5rem; /* Aumentamos um pouco o padding para dar mais respiro */
    margin-bottom: 0; /* Removemos a margem para a próxima seção se conectar */
    border-radius: 0; /* Removemos o raio da borda para uma transição suave */
    border-left: none; /* Removemos a borda lateral */
    text-align: center;
    
    /* --- GRADIENTE DO AMANHECER APLICADO AQUI --- */
    background: linear-gradient(
        to bottom, 
        #0b1222 0%,      /* Um azul ainda mais escuro para o topo do céu */
        #06b6d4 85%,     /* Azul celeste, a cor principal */
        #f97316 100%     /* Laranja do sol nascente, focado na base */
    );
}

.hero h2 {
    font-size: 2.5rem;
    font-weight: 400;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    max-width: 800px;
    margin: auto;
}
.hero p {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 700px;
    margin: 0 auto 2rem;
}
.hero-image {
    display: block; 
    width: 100%;
    max-width: 350px;
    height: auto;
    margin: 2rem auto;
    border-radius: 50%;
    box-shadow: 0 0 35px rgba(249, 115, 22, 0.5); /* Sombra laranja mais forte */
}
.hero .btn {
    display: inline-block;
    padding: 0.75rem 2rem;
    border-radius: 8px;
    font-weight: 700;
    text-decoration: none;
    cursor: pointer;
    margin-top: 1rem;
    background-color: transparent;
    border: 2px solid rgba(255, 255, 255, 0.5); /* Borda branca translúcida */
    color: white;
    transition: all 0.3s ease;
    font-size: 0.9rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
}
.hero .btn:hover {
    background-color: white;
    color: #0f172a;
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(255,255,255,0.2);
}
@media (max-width: 768px) {
    .hero h2 { font-size: 2rem; }
    .hero p { font-size: 1rem; }
}
</style>