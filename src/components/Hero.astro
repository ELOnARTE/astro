---
// src/components/Hero.astro
import { Image } from 'astro:assets';
import heroImage from '../assets/helo.webp'; 
---
<section id="hero" class="hero">
    <h2>Boas-vindas a este elegante<br>elo na arte inspirada!</h2>
    <p>Conectando arte, terapia e tecnologia<br>para realizar, inspirar, incluir...</p>
    
    <Image 
        src={heroImage} 
        alt="Ilustração abstrata e cósmica representando a essência da ELOnARTE" 
        class="hero-image"
        width={500}
        height={500}
        quality={'mid'}
    />

    <a href="#servicos" class="btn">Conheça Nossos Serviços</a>
</section>

<style>
.hero {
    padding: 4rem 1.5rem;
    margin: 0;
    border-radius: 0;
    border-left: none;
    text-align: center;
    
    /* --- GRADIENTE SUTIL: Do fundo escuro para o azul --- */
    background: linear-gradient(
        to bottom, 
        var(--color-bg) 30%,      /* Começa com o fundo principal escuro */
        rgba(6, 182, 212, 0.1)  /* Termina com um brilho sutil de turquesa */
    );
}

.hero h2 {
    font-size: 2.5rem;
    font-weight: 400;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    max-width: 800px;
    margin: auto;
}
.hero p {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 700px;
    margin: 0 auto 2rem;
}
.hero-image {
    display: block; 
    width: 100%;
    max-width: 350px;
    height: auto;
    margin: 2rem auto;
    border-radius: 50%;
    box-shadow: 0 0 25px rgba(6, 182, 212, 0.3); /* Sombra turquesa */
}
.hero .btn {
    display: inline-block;
    padding: 0.75rem 2rem;
    border-radius: 8px;
    font-weight: 700;
    text-decoration: none;
    cursor: pointer;
    margin-top: 1rem;
    background-color: transparent;
    border: 2px solid var(--color-bg-light);
    color: var(--color-text-secondary);
    transition: all 0.3s ease;
    font-size: 0.9rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
}
.hero .btn:hover {
    background-color: var(--color-bg-light);
    color: var(--color-text-primary);
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
}
@media (max-width: 768px) {
    .hero h2 { font-size: 2rem; }
    .hero p { font-size: 1rem; }
}
</style>