---
// src/components/Hero.astro
import { Image } from 'astro:assets';
import heroImage from '../assets/helo.webp'; 
---
<section id="hero" class="hero">
    <h2>Boas-vindas a este elegante<br>elo na arte inspirada!</h2>
    <p>Conectando arte, terapia e tecnologia<br>para realizar, inspirar, incluir...</p>
    
    <Image 
        src={heroImage} 
        alt="Ilustração abstrata e cósmica representando a essência da ELOnARTE" 
        class="hero-image"
        width={500}
        height={500}
        quality={'mid'}
    />

   <a href="#artes-digitais" class="cta-button">
      <span>Conheça nossos Serviços</span>
      <svg class="arrow-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M5 12h14"/><path d="m12 5 7 7-7 7"/>
      </svg>
    </a>
</section>

<style>
.hero {
    padding: 4rem 1.5rem;
    margin: 0;
    border-radius: 0;
    border-left: none;
    text-align: center;
    background: linear-gradient(
        to bottom, 
        var(--color-bg) 30%,
        rgba(6, 182, 212, 0.1)
    );
}
.hero h2 {
    font-size: 2.5rem;
    font-weight: 400;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    max-width: 800px;
    margin: auto;
}
.hero p {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 700px;
    margin: 0 auto 2rem;
}
.hero-image {
    display: block; 
    width: 100%;
    max-width: 350px;
    height: auto;
    margin: 2rem auto;
    border-radius: 50%;
    box-shadow: 0 0 25px rgba(6, 182, 212, 0.3);
}

/* ================ SUBSTITUA OS ESTILOS DO BOTÃO ANTIGO (.hero .btn) POR ESTES ================ */

.cta-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.75rem; /* Espaço entre o texto e a seta */
  background-color: var(--accent-turquoise);
  color: var(--color-bg);
  padding: 0.75rem 2rem;
  border-radius: 8px;
  font-weight: 700;
  text-decoration: none;
  cursor: pointer;
  margin-top: 1rem;
  border: 2px solid transparent;
  transition: background-color 0.3s ease, transform 0.3s ease;
}

.cta-button:hover {
  background-color: var(--accent-lilac);
  transform: translateY(-3px);
}

.arrow-icon {
  transition: transform 0.3s ease-out; /* Define a animação da seta */
}

.cta-button:hover .arrow-icon {
  transform: translateX(5px); /* Move a seta para a direita no hover */
}

/* ========================================================================================= */

@media (max-width: 768px) {
    .hero h2 { font-size: 2rem; }
    .hero p { font-size: 1rem; }
}
</style>