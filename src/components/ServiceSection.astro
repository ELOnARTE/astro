---
// src/components/ServiceSection.astro
interface Props {
    id: string;
    title: string;
    subtitle: string;
    accentColor: string;
}

const { id, title, subtitle, accentColor } = Astro.props;
---
<section id={id} class="service-section">
    <div class="section-header">
        <div class="icon-wrapper">
            <slot name="icon" />
        </div>
        <h2 style={`color: ${accentColor};`}>{title}</h2>
    </div>
    <p class="subtitle">{subtitle}</p>
    <div class="cards-grid">
        <slot />
    </div>
</section>

<style>
    .service-section {
        padding: 4rem 1.5rem;
        margin-bottom: 0; /* Removemos a margem para a próxima seção se conectar */
        border-radius: 0;
        position: relative;
    }
    
    /* --- GRADIENTES PERSONALIZADOS E INTERLIGADOS --- */
    
    /* Começa Laranja (do Hero), passa pelo Turquesa (própria), termina no Lilás (da próxima) */
    #artes-digitais {
        background: linear-gradient(to bottom, #f97316, var(--accent-turquoise) 50%, var(--accent-lilac));
    }

    /* Começa Lilás, passa por si mesma, termina no Rosa (da próxima) */
    #arteterapia {
        background: linear-gradient(to bottom, var(--accent-lilac), var(--accent-lilac) 50%, var(--accent-lightpink));
    }

    /* Começa Rosa, passa por si mesma, termina no Azul Claro (da próxima) */
    #ensino {
        background: linear-gradient(to bottom, var(--accent-lightpink), var(--accent-lightpink) 50%, var(--color-bg-light));
    }

    .section-header {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        text-align: center;
        margin-bottom: 0.5rem;
    }
    .icon-wrapper {
        color: var(--section-accent);
        width: 48px;
        height: 48px;
        margin-bottom: 0.5rem;
        filter: drop-shadow(0 0 5px rgba(255,255,255,0.7)); /* Adiciona um brilho sutil ao ícone */
    }
    .section-header h2 {
        font-size: 1.75rem;
        margin: 0;
        font-weight: 700; /* Deixei em negrito para contrastar com o fundo colorido */
        text-shadow: 0 1px 3px rgba(0,0,0,0.5); /* Sombra no texto para legibilidade */
    }
    .subtitle {
        text-align: center;
        color: var(--color-text-primary); /* Clareei o subtítulo para legibilidade */
        margin-bottom: 3.5rem;
        max-width: 60ch;
        margin-left: auto;
        margin-right: auto;
        text-shadow: 0 1px 2px rgba(0,0,0,0.4);
    }
    .cards-grid {
        display: grid;
        gap: 1.5rem;
    }
</style>