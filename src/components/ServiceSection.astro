---
// src/components/ServiceSection.astro
interface Props {
    id: string;
    title: string;
    subtitle: string;
    accentColor: string;
}

const { id, title, subtitle, accentColor } = Astro.props;
---
<section id={id} class="service-section" style={`--section-accent: ${accentColor};`}>
    <div class="section-header">
        <div class="icon-wrapper">
            <slot name="icon" />
        </div>
        <h2 style={`color: ${accentColor};`}>{title}</h2>
    </div>
    <p class="subtitle">{subtitle}</p>
    <div class="cards-grid">
        <slot />
    </div>
</section>

<style>
    .service-section {
        padding: 4rem 1.5rem;
        margin-bottom: 4rem;
        border-radius: 16px;
        position: relative;

        /* --- CORREÇÃO APLICADA AQUI --- */
        /* Gradiente de fundo sutil restaurado */
        background: linear-gradient(to bottom, var(--color-bg), var(--color-bg-light), var(--color-bg));
        border-left: 4px solid var(--section-accent);
    }
    .section-header {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        text-align: center;
        margin-bottom: 0.5rem;
    }
    .icon-wrapper {
        color: var(--section-accent);
        width: 48px;
        height: 48px;
        margin-bottom: 0.5rem;
    }
    .section-header h2 {
        font-size: 1.75rem;
        margin: 0;
        font-weight: 400;
    }
    .subtitle {
        text-align: center;
        color: var(--color-text-secondary);
        margin-bottom: 3.5rem;
        max-width: 60ch;
        margin-left: auto;
        margin-right: auto;
    }
    .cards-grid {
        display: grid;
        gap: 1.5rem;
    }
</style>