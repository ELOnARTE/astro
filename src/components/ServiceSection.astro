---
// src/components/ServiceSection.astro
const { id, title, subtitle, accentColor, accentClass } = Astro.props;
---
<section id={id} class:list={["service-section", accentClass]} style={`--section-accent: ${accentColor}`}>
    <h2 class:list={["accent", accentClass]}>{title}</h2>
    <p class="subtitle">{subtitle}</p>
    <div class="cards-grid">
        <slot /> <!-- Os componentes <Card> irÃ£o aqui -->
    </div>
</section>

<style>
.service-section {
    padding: 3rem 1.5rem;
    margin-bottom: 4rem;
    border-radius: 12px;
    border-left: 4px solid var(--section-accent);
    scroll-margin-top: 5rem;
}
#artes-digitais { background: linear-gradient(to bottom,var(--color-bg),var(--color-bg-section-1),var(--color-bg)); }
#arteterapia { background: linear-gradient(to bottom,var(--color-bg),var(--color-bg-section-2),var(--color-bg)); }
#ensino { background: linear-gradient(to bottom,var(--color-bg),var(--color-bg-section-3),var(--color-bg)); }

.service-section h2 {
    text-align: center;
    font-size: 2rem;
    margin-bottom: .5rem;
    color: var(--section-accent);
}
.service-section .subtitle {
    text-align: center;
    color: var(--color-text-secondary);
    margin-bottom: 3rem;
}
.cards-grid {
    display: grid;
    gap: 1.5rem;
}

@media (min-width: 768px){
    .cards-grid{
        grid-template-columns: repeat(2, 1fr);
    }
    #artes-digitais .cards-grid, #ensino .cards-grid {
        grid-template-columns: repeat(3, 1fr);
    }
}
@media (min-width: 1024px){
    #ensino .cards-grid {
        grid-template-columns: repeat(4, 1fr);
    }
}
</style>
