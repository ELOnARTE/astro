---
// src/components/ServiceSection.astro
interface Props {
    id: string;
    title: string;
    accentColor: string;
}
const { id, title, accentColor } = Astro.props;
---
<section id={id} class="service-section" style={`--section-accent-color: ${accentColor};`}>
    <div class="section-title">
        <h2 style={`--accent-color: ${accentColor};`}>{title}</h2>
    </div>
    <div class="section-content">
        <div class="description">
            <slot name="description" />
        </div>
        <div class="cards-grid">
            <slot />
        </div>
    </div>
</section>
<style>
    .service-section {
        padding: 4rem 0;
        border-bottom: 1px solid var(--color-bg-light);
    }
    .section-title h2 {
        font-size: 2.25rem;
        font-weight: 700;
        margin-bottom: 2.5rem;
        padding-left: 1.5rem;
        border-left: 4px solid var(--accent-color);
    }
    .section-content {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2.5rem;
    }
    .description :global(p) {
        font-size: 1.125rem;
        line-height: 1.7;
        color: var(--color-text-secondary);
    }
    .cards-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 1.5rem;
    }
    @media (min-width: 992px) {
        .section-content {
            grid-template-columns: 1fr 2fr;
            gap: 4rem;
        }
    }
</style>