---
// src/layouts/BlogPost.astro

// 1. IMPORTS NECESSÁRIOS PARA O LAYOUT FUNCIONAR
import type { CollectionEntry } from 'astro:content';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Seo from '../components/Seo.astro';

// 2. IMPORT ADICIONAL PARA A OTIMIZAÇÃO DE IMAGEM
import { Image } from 'astro:assets';

// Definimos que este layout espera receber um post completo como prop
export interface Props {
    post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
---
<!doctype html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <Seo
        title={post.data.title}
        description={post.data.description}
        image={post.data.heroImage?.src}
    />
</head>

<body>
    <Header />
    <main>
        <article class="prose">
            <div class="post-header">
                {post.data.heroImage && (
                    // 3. TAG <Image /> OTIMIZADA APLICADA
                    <Image 
                        src={post.data.heroImage} 
                        alt={`Imagem para ${post.data.title}`} 
                        class="hero-image" 
                        widths={[400, 800, 1200]}
                        sizes="(max-width: 800px) 100vw, 800px"
                    />
                )}
                <h1>{post.data.title}</h1>
                <p class="publish-date">
                    Publicado em: {new Date(post.data.pubDate).toLocaleDateString('pt-BR', { year: 'numeric', month: 'long', day: 'numeric' })}
                </p>
            </div>
            <slot />
        </article>
    </main>
    <Footer />
</body>
</html>

<style>
    /* Seu CSS permanece o mesmo */
    .prose {
        max-width: 80ch;
        margin: auto;
        padding: 2rem 1.5rem;
    }
    /* ... etc ... */
</style>