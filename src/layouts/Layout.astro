---
// src/layouts/Layout.astro
import '../styles/global.css';
import Header from '../components/Header.astro'; // 1. Importa o Header
import Footer from '../components/Footer.astro'; // 2. Importa o Footer
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const { 
    title = SITE_TITLE, 
    description = SITE_DESCRIPTION 
} = Astro.props;
---
<!DOCTYPE html>
<html lang="pt-BR" class="scroll-smooth">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    
    <!-- Seus links de Favicon, etc. -->
    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg">
    <link rel="apple-touch-icon" href="/images/apple-touch-icon.png">
    <link rel="manifest" href="/images/site.webmanifest">
</head>
<body>
    <Header /> {/* <-- 3. Adiciona o componente Header aqui */}
    
    <main>
        <slot /> <!-- O conteúdo da sua página será injetado aqui -->
    </main>

    <Footer /> {/* <-- 4. Adiciona o componente Footer aqui */}
</body>
</html>